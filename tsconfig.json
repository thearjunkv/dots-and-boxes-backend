{
	"compilerOptions": {
		"moduleDetection": "force",
		"module": "Preserve",
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"target": "ESNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"typeRoots": ["@types", "./node_modules/@types"],
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
